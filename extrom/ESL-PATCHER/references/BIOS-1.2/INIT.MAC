

	PUBLIC PIA0
	PUBLIC PIA1
	PUBLIC PIA2,INT

PIA0	EQU	0fb30H	; Printer port address
PIA1	EQU	0fb38H	; Printer status port address
PIA2	EQU	0fb08H	; Priner strobe control

PRNPORT EQU PIA0
STBPORT EQU PIA0+2
PSTPORT EQU PIA1
	PUBLIC PRNPORT
	PUBLIC STBPORT
	PUBLIC PSTPORT


CSEG
TABINT	EQU	 0f7e0h

	DW TABTRAP
TABTRAP:
	DW OUTINT##	;0 расш. разъем
	DW OUTINT##	;1 
	DW OUTINT##	;2 
	DW OUTINT##	;3 
	DW SYST##	;4 системный clock (20мс)
	DW OUTINT##	;5 timer
	DW OUTINT##	;6 printer
	DW OUTINT##	;7 одновибратор мотора
	DW SKIP3##	;8 клавиатура (вызов опроса)
	DW 0		;AUXI1
	DW 0		;AUXI2
	DW 0		;AUXI3

	PUBLIC TABINT
TBINT:
	JMP INT0##	;0f7e0h
