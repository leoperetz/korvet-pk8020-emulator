	JMP INT1##	;0f7e4h
	DB 0
	JMP INT2##	;0f7e8h
	DB 0
	JMP INT3##	;0f7ech
	DB 0
	JMP INT4##	;0f7f0h
	DB 0
	JMP INT5##	;0f7f4h
