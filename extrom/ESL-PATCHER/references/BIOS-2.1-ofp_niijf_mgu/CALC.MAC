initas_:
        mvi b,len-1
        lxi h,.as
loopinit:
        mvi m,' '
        inx h
        dcr b
        jnz loopinit
        MVI M,'0'
        inx h
        mvi m,0
        ret

addas_:
        LXI H,.flget
        mov a,m
        cpi len-1
        rz              ;перепонение
        ora a
        jnz nofirst
        call initas_
        LXI H,.flget
        mov a,c
        cpi '0'
        jz szero             ; 0 уже есть
        cpi '.'
        jnz frst      ; 0 оставляем
        inr m
        jmp nofirst
szero:
        mvi a,1
        sta .flz
        ret
frst:
        mvi a,' '           ; 0 затираем
