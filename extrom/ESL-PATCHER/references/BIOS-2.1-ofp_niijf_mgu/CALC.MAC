nofirst:
        inr m           ;set .flget
        mvi b,len-2
        lxi h,.as+1     ;не трогаем знак
        lxi d,.as+2
loopadd:
        ldax d
        mov m,a
        inx d
        inx h
        dcr b
        jnz loopadd
        mov m,c
        ret

decas_:
        LXI H,.flget
        mov a,m
        ora a
        rz              ;удалять нечего
        dcr m
        jz dcend
        cpi 2
        jnz no2
        lda .as+len-1
        cpi '.'
        jnz no2
        lda .as+len-2
        cpi '0'
        jnz no2
        dcr m
no2:
        lxi h,.as+len-1
        lxi d,.as+len-2
        mvi b,len-1

loopdcr:
        ldax d
        mov m,a
        dcx d
        dcx h
        dcr b
        jnz loopdcr
        mvi m,' '
        ret
dcend:
        lxi h,.as+len-1
        mvi m,48
        RET
index:
        mov a,m
        ora a
        rz
        inx h
        cmp c
        jnz index
        ori  1
        ret
