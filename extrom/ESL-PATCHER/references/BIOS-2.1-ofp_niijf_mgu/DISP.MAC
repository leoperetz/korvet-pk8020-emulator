	di
	STA 0FA7FH
	sta syscopy##	;сохраняем копию
	ei
	POP	H
	SPHL
	RET
BEEP:

	MVI A,36H
	STA 0FB03H
	LHLD BELLDIV##
	LXI D,0FB00H
	XCHG
	MOV M,L
	MOV M,D
;
