	MOV B,M
	MVI A,8
	ORA B
	MOV M,A		;включили звук
	XCHG
;
	LHLD BELLDEL##
LPBEEP:	
	DCX H
	MOV A,L
	ORA H
	JNZ  LPBEEP
	XCHG
	MOV M,B
	lda sndflg
	ora a
	rz
SNDON::	MVI A,20H
	STA 0FB03H
	MVI A,7
	STA 0FB33H
	RET

